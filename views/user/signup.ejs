<% include ../partials/header.ejs %>
  <!-- Sign Up Modal via bootstrap-->
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 input-container">
        <div>
          <h1><%= title %></h1>
          <% if (messages.length > 0) { %>

            <div class="alert alert-danger">
              <% for(let i = 0; i < messages.length; i++){ %>
                <p>
                  <%= messages[i] %>
                </p>
                <% }
        } %>
            </div>
            <div>
              <form class="" action="/signup" method="post">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="text" name="email" placeholder="email" class="form-control" id="email">
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="text" name="password" placeholder="password" class="form-control" id="password">
                </div>
                <!-- hidden token to protect against phishing attacks -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" name="submit" class="btn btn-primary"><%= title %></button>
                <a href="/user/login" class="pull-right">Already have an account? Sign in!</a>
              </form>
            </div>
        </div>

      </div>
    </div>
  </div>
  <% include ../partials/footer.ejs %>
